model Media {
  id Int @id @default(autoincrement())

  name     String
  url      String
  mimeType String

  isPrimary Boolean @default(false)
  order     Int     @default(0)
  alt       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  propertyId Int
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@map("media")
}
